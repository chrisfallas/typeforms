{
  "name": "typeforms",
  "author": "chrisfallas",
  "maintainers": [
    "chrisfallas <chrisfallas.ch@gmail.com>"
  ],
  "description": "Build type-safe React forms, keeping your code clean",
  "version": "1.0.0",
  "keywords": [
    "react",
    "typescript",
    "forms",
    "type-safe",
    "type",
    "safe",
    "state",
    "manager"
  ],
  "license": "ISC",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.16",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.0.3",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "postinstall": "node -e \"try {require('husky').install('./.husky');} catch (e) {}\"",
    "build": "bun build:lib && bun run build:types",
    "build:lib": "bun build ./src/index.ts --outdir ./dist --target=node --external react --minify",
    "build:types": "tsc --project tsconfig.json",
    "dev": "bun bun.local.ts",
    "dev:lib": "bun build ./src/index.ts --outdir ./dist --target=node --external react --minify --watch",
    "dev:types": "tsc --project tsconfig.json --watch",
    "prettier": "prettier --write \"src/**/*.+(ts|tsx|js|jsx|json|css|scss|saas|html|md)\""
  }
}
