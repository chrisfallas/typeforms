{
  "name": "typeforms",
  "description": "Build type-safe React forms, keeping your code clean",
  "version": "0.2.0",
  "license": "MIT",
  "author": "chrisfallas",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chrisfallas/typeforms.git"
  },
  "keywords": [
    "react",
    "typescript",
    "forms",
    "type-safe",
    "type",
    "safe",
    "state",
    "management",
    "validations"
  ],
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "peerDependencies": {
    "react": "^17 || ^18 || ^19",
    "react-dom": "^17 || ^18 || ^19"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "esbuild": "^0.25.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.0.3",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "postinstall": "node -e \"try {require('husky').install('./.husky');} catch (e) {}\"",
    "build": "BUILD_TYPE=PROD node esbuild.mjs",
    "dev": "BUILD_TYPE=DEV node esbuild.mjs",
    "prettier": "prettier --write \"src/**/*.+(ts|tsx|js|jsx|json|css|scss|saas|html|md)\"",
    "prepublishOnly": "npm run build"
  }
}
